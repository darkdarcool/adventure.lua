local function writefile (filename, s)
    local f, e = io.open(filename, 'w')
    if not f then return raise(e) end
    f:write(s)
    f:close()
    return true
end

local function readfile (filename)
    local f, e = io.open(filename, 'r')
    if not f then return raise(e) end
    local s, e = f:read('*a')
    f:close()
    if not s then return raise(e) end
    return s
end

